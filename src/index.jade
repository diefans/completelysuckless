html(data-ng-app="Foo")
    head
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.js")
        script(type="text/javascript" src="completelysuckless.js")
        script(type="text/javascript" src="demo.js")

        link(href="css/completelysuckless.css" type="text/css" rel="stylesheet")

        style.
            ul {
                border: 1px solid black;
            }

    body(data-ng-controller="FooController")

        h1 completely suckless input completion

        dl
            dt input:
            dd {{ input.value }}

            dt chosen:
            dd
                pre {{ chosen | json }}

        suckless-complete(
            data-choices="input.choices"
            data-choose="choose"
            data-update="update"
            data-value="input.value"
            data-auto-select="autoSelect"
            placeholder="enter some value"
        )
            .item
                | {{ choice.name }}

